<%= form_for(order) do |f| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, '姓名:' %>
    <%= f.text_field :name, size: 40 %>
  </div>

  <div class="field">
    <%= f.label :address, '地址:' %>
    <%= f.text_area :address, row: 3, cols: 40 %>
  </div>

  <div class="field">
    <%= f.label :email, '邮箱:'  %>
    <%= f.text_field :email, size: 40 %>
  </div>

  <div class="field">
    <%= f.label :pay_type, '支付方式:'  %>
    <%= f.select   :pay_type, Order.pay_types.keys, prompt: '请选择一种支付方式' %>
  </div>

  <div class="actions">
    <%= f.submit '提交订单' %>
  </div>
<% end %>
