<div class="deep_pay_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag do %>
    <fieldset>
      <legend>请登录</legend>

      <div>
        <%= label_tag :name, '姓名：' %>
        <%= text_field_tag :name, params[:name] %>
      </div>

      <div>
        <%= label_tag :password, '密码：' %>
        <%= password_field_tag :password, params[:password] %>
      </div>
      
      <div>
        <%= button_to("登录") %>
        <%= button_to('注册', new_user_path, method: :get) %>
      </div>
      
    </fieldset>
  <% end %>
</div>